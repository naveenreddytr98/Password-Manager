<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userDetailsPageId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginDetailsActivity">

    <TextView
        android:id="@+id/titleTxtId3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/paddingTop5"
        android:paddingBottom="@dimen/paddingbottom10"
        android:text="@string/titleTxtStr"
        android:textAlignment="center"
        android:textSize="@dimen/titleTxtSize" />

    <TextView
        android:id="@+id/columnName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/userNameEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/passowordEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/urlText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/URLEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/webClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:text="Visit website"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/updateBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:text="UPDATE"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:text="Text"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textColor="#fff" />

</LinearLayout>